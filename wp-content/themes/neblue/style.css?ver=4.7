.site-content{
	margin:30px 0;
}
.content-area{
	width:70%;
	float:left;
	display:inline-block;
}

.page-header{
	background:#ffffff;
	box-shadow: 0 0 3px #cccccc;
	padding:10px 12px;
	margin:0 0 20px;
}
.page-title{
	font-size:16px;
	line-height:18px;
	color:#578CCA;
}
.navigation-post{
	height:32px;
	line-height:32px;
	margin:0 0 20px;
	padding:0 12px;
	background:#ffffff;
	box-shadow: 0 0 3px #cccccc;
	font-size:12px;
