.navigation-post .nav-previous{
	float:left;
}
.navigation-post .nav-next{
	float:right;
}
#page-nav-below{
	padding:20px 10px 0;
}
#page-nav-below .nav-previous{
	float:left;
}
#page-nav-below .nav-next{
	float:right;
}
.page-links{
	height:30px;
	line-height:30px;
	font-size:12px;
}
.page-links a{
	margin:0 0 0 3px;
	text-decoration:underline;
}
.not-found-options{
